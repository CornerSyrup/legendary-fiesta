{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.vue",
    "data/**/*.ts",
    "lib/**/*.ts",
    "env.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
